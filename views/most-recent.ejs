<%- include( 'templates/head' , { home: '' , categories: '' ,
    popular: '', recent: ' active' , pageStyle: 'css/books-section.css'}) %>

    <div class='container-md'>
        <section id='main-section'>
            <div class='row d-flex'>
            <% for (let index = 0; index < recentBooks.length; index += 1) { %>
                    <% try { %>
                        <% recentBooks[index].imageLinks.thumbnail %>
                    <% } catch { continue }; %>

                    <div class='col-md-auto my-3 mx-3 text-center'>
                        <img src='<%= recentBooks[index].imageLinks.thumbnail %>' alt='Sample Book' class='book-images'>
                        <p class='description'><%= recentBooks[index].description.slice(0, 237) + '...' %></p>
                        <p class='mt-3 title'><%= recentBooks[index].title %></p>
                    </div>
                <% } %>
            </div>
        </section>
    </div>

    <%- include('templates/latest-books') %>
    <%- include('templates/footer') %>