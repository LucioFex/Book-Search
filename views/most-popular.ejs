<%- include( 'templates/head' , { home: ' ' , categories: '' ,
    popular: ' active', recent: '' , pageStyle: 'css/books-section.css'}) %>

    <div class='container-md'>
        <section id='main-section'>
            <div class='row d-flex'>
            <% for (let index = 0; index < 12; index += 1) { %>
                    <% try { %>
                        <% popularBooks[index].imageLinks.thumbnail %>
                    <% } catch { continue }; %>

                    <div class='col-md-auto my-3 mx-3 text-center'>
                        <img src='<%= popularBooks[index].imageLinks.thumbnail %>' alt='Sample Book' class='book-images'>
                        <p class='description'><%= popularBooks[index].description.slice(0, 237) + '...' %></p>
                        <p class='mt-3 title'><%= popularBooks[index].title %></p>
                    </div>
                <% } %>
            </div>
        </section>
        <nav id="pagination">
            <ul class="pagination d-flex justify-content-center">
                <% let totalPagination = 0; %>
                <% let activePage = ''; %>
                <% if (page > 1) { %>
                    <li class="page-item mx-1">
                        <a class="page-link" href="#"><i class="fas fa-chevron-left"></i></a>
                    </li>
                <% } %>

                <% for (let index = page - 1; index < page + 3; index += 1) { %>
                    <% activePage = ''; %>
                    <% if (index === page) activePage = 'active'; %>
                    <li class="page-item <%= activePage %> mx-1">
                        <a class="page-link" href="/popular?page=<%= index %>"><%= index %></a>
                    </li>
                <% } %>
                <!-- <li class="page-item mx-1"><a class="page-link" href="/popular?page=2">2</a></li>
                <li class="page-item active mx-1"><a class="page-link" href="/popular?page=3">3</a></li> -->

                <li class="page-item disabled mx-1"><a class="page-link" href="#">. . .</a></li>
                <li class="page-item mx-1"><a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a></li>
            </ul>
        </nav>
    </div>

    <%- include('templates/latest-books') %>
    <%- include('templates/footer') %>
