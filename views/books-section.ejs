<%- include( 'templates/head' , { home: '' , categories: navbarCategories ,
    popular: navbarPopular, recent: '' , pageStyle: 'css/books-section.css'}) %>

    <div class='container-md'>
        <section id='main-section'>
            <div class='row d-flex'>
            <% for (let index = 0; index < 12; index += 1) { %>
                    <% try { %>
                        <% books[index].imageLinks.thumbnail %>
                    <% } catch (err) { continue }; %>

                    <div class='col-md-auto my-3 mx-3 text-center'>
                        <img src='<%= books[index].imageLinks.thumbnail %>' alt='Sample Book' class='book-images'>
                        <p class='description'><%= books[index].description.slice(0, 237) + '...' %></p>
                        <p class='mt-3 title'><%= books[index].title %></p>
                    </div>
                <% } %>
            </div>
        </section>
        <%- include( 'templates/pagination' , { books, route, subject, page }) %>
    </div>

    <%- include('templates/latest-books') %>
    <%- include('templates/footer') %>
