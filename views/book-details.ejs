<%- include( 'templates/head' , { home: '' , categories: '' , popular: '' ,
    recent: '' , pageStyle: 'css/book-details.css' }) %>

    <div class="mb-5">
        <section class="container-fluid row justify-content-center banner">
            <img src="<%= bookInfo.volumeInfo.imageLinks.thumbnail %>">
        </section>

        <section class="container-md">
            <div class="book-presentation">
                <img src="<%= bookInfo.volumeInfo.imageLinks.thumbnail %>">
                <article class="row">
                    <div class="col-md-auto">
                        <h1><%= bookInfo.volumeInfo.title %></h1>
                        <div id="book-data" class="row d-flex ms-4 mt-5">
                            <div class="col-md-auto">
                                <h3>Author: <%= bookInfo.volumeInfo.authors %></h3>
                                <h4>Publisher: <%= bookInfo.volumeInfo.publisher %></h4>
                            </div>
                            <div class="col-md-auto ms-5">
                                <p>Page Account: <%= bookInfo.volumeInfo.pageCount %></p>
                                <p>Language: <%= bookInfo.volumeInfo.language %></p>
                                <p>Price:
                                    <%= bookInfo.saleInfo.listPrice.amount %>
                                    <%= bookInfo.saleInfo.listPrice.currencyCode %>
                                </p>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </section>
    </div>

    <%- include('templates/footer') %>
